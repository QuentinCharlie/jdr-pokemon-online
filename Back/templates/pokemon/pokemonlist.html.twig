{% extends "base.html.twig" %}

{% block body %}

<h2>liste des pokemon</h2>

<div class="card-deck">
  {% for pokemon in pokemons %}
    <div class="card card-pokemon">
      <img src="{{asset('assets/images/sprites-pokemon/'~ pokemon.number ~'.png')}}" class="card-img-top" alt="{{ pokemon.name }}">
      <div class="card-body">
        <h5 class="card-title">{{pokemon.name}}</h5>
        <a href="{{ path('detail_pokemon', {'id' : pokemon.id}) }}" class="btn btn-primary">Voir les d√©tails</a>
      </div>
    </div>
    {% endfor %}
  </div>

{% endblock %}