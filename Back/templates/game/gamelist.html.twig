{% extends "base.html.twig" %}

{% block body %}

<h2>Rejoins et crée une partie</h2>

<a href="{{ path('game_create')}}">Créer une partie</a>

<div class="container-fluid"></div>
    <div class="row">
    <div class="card col-5" style="max-width: 50%; margin-right: 6em; height:50em">
        <div class="card-header">
          Liste des parties en cours
        </div>
        <ul class="list-group list-group-flush">
        {% for game in games %}
          <li class="list-group-item">Partie : <a href="{{ path('game_board', {'port' : game.port}) }}">{{game.port}}</a></li>
          <a href="{{ path('game_mj_delete', {'port' : game.port})}}"> Supprimer la partie</a>
        {% endfor %}
        </ul>
    </div>

    <div class="card col-3" style="max-width: 50%;">
        <img src="{{asset('assets/images/'~ app.user.avatar.name ~'.png')}}" class="card-img-top" alt="...">
        <div class="card-body">
         
          
        </div>
      </div>
    </div>
</div>

{% endblock %}